<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_header_menu_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/profile_pic_bg"
        android:outlineSpotShadowColor="@color/primary_color"
        android:src="@drawable/profile_pic"
        app:riv_corner_radius="100dp" />

    <com.example.foodhub.views.widgets.PageTitleText
        android:id="@+id/tv_header_menu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header_menu_pic"
        android:layout_marginTop="20dp"
        android:text="Eljad Eendaz"
        app:pt_text_size="20" />

    <com.example.foodhub.views.widgets.DescriptionPageText
        android:id="@+id/tv_header_menu_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header_menu_name"
        android:layout_marginTop="5dp"
        android:text="prelookstudio@gmail.com" />

</RelativeLayout>