<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_marginTop="30dp"
        android:id="@+id/iv_header_menu_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/profile_pic_bg"
        android:outlineSpotShadowColor="@color/primary_color"
        android:src="@drawable/profile_pic"
        app:riv_corner_radius="100dp" />
    <com.example.foodhub.views.widgets.PageTitleText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header_menu_pic"
        android:text="Eljad Eendaz"
        app:pt_text_size="20"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_header_menu_name"
        />
    <com.example.foodhub.views.widgets.DescriptionPageText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="prelookstudio@gmail.com"
        android:layout_below="@id/tv_header_menu_name"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_header_menu_edit"
        />

</RelativeLayout>