<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".views.pages.b_account.RessetPassword">
    <include layout="@layout/back_header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="550dp"
        android:fontFamily="@font/sofiapro_semibold"
        android:gravity="top"
        android:text="Resset Password"
        android:textColor="@color/black"
        android:textSize="37dp"
        android:translationY="-3.64dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/sofiaproreguler"
        android:gravity="top"
        android:text="Please type the verification code sent to prelookstudio@gmail.com"
        android:textColor="@color/hint_color"
        android:textSize="16dp"
        android:layout_marginBottom="500dp"
        android:layout_marginLeft="26dp"
        android:translationY="-3.64dp" />

    <EditText
        android:id="@+id/et_resetpassword_email"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/sofiapromedium"
        android:padding="20dp"
        android:text="prelookstudio@gmail.com"
        android:textColor="@color/Et_color"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btn_resetpassword_resetpassword"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="300dp"
        android:background="@drawable/btn_bg_3"
        android:elevation="30dp"
        android:fontFamily="@font/sofiaproreguler"
        android:text="Send new password"
        android:textSize="15dp" />


</RelativeLayout>