<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".views.pages.b_account.Login"

    >

    <include layout="@layout/back_header" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="550dp"
        android:fontFamily="@font/sofiapro_semibold"
        android:gravity="top"
        android:text="Log in"
        android:textColor="@color/black"
        android:textSize="37dp"
        android:translationY="-3.64dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="450dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sofiapro_reguler"
            android:gravity="top"
            android:text="Email"
            android:textColor="@color/hint_color"
            android:textSize="16dp"
            android:translationY="-3.64dp" />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="325dp"
            android:layout_height="65dp"
            android:background="@drawable/et_bg"
            android:fontFamily="@font/sofiapro_medium"
            android:padding="20dp"
            android:text="prelookstudio@gmail.com"
            android:textColor="@color/Et_color"
            android:textSize="17dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="330dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sofiapro_reguler"
            android:gravity="top"
            android:text="Password"
            android:textColor="@color/hint_color"
            android:textSize="16dp"
            android:translationY="-3.64dp" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="325dp"
            android:layout_height="65dp"
            android:background="@drawable/et_bg"
            android:fontFamily="@font/sofiapro_medium"
            android:padding="20dp"
            android:text="prelookstudio"
            android:textColor="@color/Et_color"
            android:textSize="17dp"
            android:inputType="textPassword"
            android:drawableRight="@drawable/eye"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_login_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="280dp"
        android:fontFamily="@font/sofiapro_medium"
        android:text="Forgot password?"
        android:textColor="@color/primary_color"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="185dp"
        android:background="@drawable/btn_bg_3"
        android:elevation="30dp"
        android:fontFamily="@font/sofiapro_reguler"
        android:text="Login"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginBottom="135dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sofiapro_medium"
            android:text="Donâ€™t have an account? "
            android:textColor="@color/hint_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_signin_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sofiapro_medium"
            android:text="Sign Up"
            android:textColor="@color/primary_color"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"
        >

        <View
            android:layout_width="84dp"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="#80B3B3B3"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/sofiapro_medium"
            android:text="sign in with"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <View
            android:layout_width="84dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="#80B3B3B3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="30dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_welcome_facebook"
            android:layout_width="140dp"
            android:layout_height="54dp"
            app:backgroundTint="@color/white"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_bg_1"
            android:drawableLeft="@drawable/facebook"
            android:fontFamily="@font/sofiapro_medium"
            android:gravity="center"
            android:padding="12dp"
            android:text="Facebook"
            android:textColor="#000000"
            android:textSize="13dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_welcome_google"
            android:layout_width="140dp"
            app:backgroundTint="@color/white"
            android:layout_height="54dp"
            android:background="@drawable/btn_bg_1"
            android:drawableLeft="@drawable/google"
            android:fontFamily="@font/sofiapro_reguler"
            android:gravity="center"
            android:padding="12dp"
            android:text="Google"
            android:textColor="#000000"
            android:textSize="13dp" />

    </LinearLayout>

</RelativeLayout>