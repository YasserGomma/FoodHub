<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:clipToPadding="false"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Image Background-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/iv_restaurant_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/resturent_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg_1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_restaurant_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofiapro_semibold"
                        android:text="4.5"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/tv_restaurant_num_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sofiapro_reguler"
                        android:text="(25+)"
                        android:textColor="#B3B3B3"
                        android:textSize="9dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/heart" />
            </androidx.cardview.widget.CardView>
            <!--Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/sofiapro_semibold"
                    android:text="McDonaldâ€™s "
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/verfied" />

            </LinearLayout>
            <!--Extra info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/delivery" />

                <TextView
                    android:id="@+id/tv_restaurant_delivery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/sofiapro_reguler"
                    android:gravity="center"
                    android:text="free delivery"
                    android:textColor="#5B5B5E"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/tv_restaurant_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/sofiapro_reguler"
                    android:gravity="center"
                    android:text="10-15 mins"
                    android:textColor="#5B5B5E"
                    android:textSize="12dp" />


            </LinearLayout>
            <!--Foods types -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/tv_restaurant_pop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofiapro_reguler"
                    android:textSize="14dp"
                    android:textAllCaps="true"
                    android:textColor="#515154"
                    android:text="Burger "
                    android:background="@drawable/tv_bg"
                    android:padding="5dp"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:id="@+id/tv_restaurant_pop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofiapro_reguler"
                    android:textSize="14dp"
                    android:textAllCaps="true"
                    android:textColor="#515154"
                    android:text="Chicken"
                    android:background="@drawable/tv_bg"
                    android:padding="5dp"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:id="@+id/tv_restaurant_pop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofiapro_reguler"
                    android:textSize="14dp"
                    android:textAllCaps="true"
                    android:textColor="#515154"
                    android:text="Fast Food"
                    android:background="@drawable/tv_bg"
                    android:padding="5dp"
                    android:layout_marginEnd="10dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>