<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_home_header_menu"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="2dp"
        android:background="@drawable/btn_bg_4"
        android:clickable="true"
        android:drawableTop="@drawable/menu"
        android:paddingTop="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofiapro_medium"
                android:text="Deliver  to"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <Spinner
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:scrollbarSize="100dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_header_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofiapro_medium"
            android:maxLines="1"
            android:text=" 4102 Pretty View Lane"
            android:textColor="@color/primary_color"
            android:textSize="16dp"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_home_header_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/person" />

</RelativeLayout>